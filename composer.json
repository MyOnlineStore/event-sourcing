{
    "name": "myonlinestore/event-sourcing",
    "type": "library",
    "description": "MyOnlineStore Event Sourcing base functionality",
    "homepage": "https://github.com/MyOnlineStore/event-sourcing",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MyOnlineStore\\EventSourcing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyOnlineStore\\EventSourcing\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "defuse/php-encryption": "^2.3",
        "doctrine/dbal": "^2.13",
        "psr/event-dispatcher": "^1.0",
        "ramsey/uuid": "^3.9 || ^4.0",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "myonlinestore/coding-standard": "^3.1",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.15",
        "vimeo/psalm": "^4.6"
    }
}
